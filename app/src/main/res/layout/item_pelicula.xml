<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:background="@color/primary_100"
    android:padding="12dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="4dp"
    android:id="@+id/pelicula_detalle"
    >

    <ImageView
        android:id="@+id/iv_pelicula"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:srcCompat="@android:drawable/ic_menu_gallery"
        android:contentDescription="@string/portada_pelicula"/>

    <TextView
        android:id="@+id/tv_titulo"
        android:layout_width="224dp"
        android:layout_height="24dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_weight="0.5"
        android:textColor="@color/text"
        android:textSize="20sp"
        android:ellipsize="end"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/tv_fecha"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_weight="0.5"
        android:textColor="@color/textSub"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_calificacion"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_weight="0.5"
        android:textColor="@color/textSub"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/btnVerMas"
        android:layout_width="121dp"
        android:layout_height="48dp"
        android:layout_weight="0.5"
        android:backgroundTint="@color/secondary_300"
        android:text="@string/btnVerMas"
        android:textAlignment="center"
        android:textSize="12sp"/>


</LinearLayout>