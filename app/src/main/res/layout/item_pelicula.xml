<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pelicula_detalle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="4dp"
    android:background="@color/primary_100"
    android:orientation="vertical"
    android:padding="12dp"
    android:weightSum="1">

    <ImageView
        android:id="@+id/iv_pelicula"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:contentDescription="@string/portada_pelicula"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    <TextView
        android:id="@+id/tv_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_weight="0.5"
        android:ellipsize="end"
        android:text="The subtance"
        android:textColor="@color/text"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_fecha"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:layout_marginStart="4dp"
        android:layout_weight="0.5"
        android:text="ejemplo"
        android:textColor="@color/textSub"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_calificacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="ejemplo"
        android:layout_weight="0.5"
        android:textColor="@color/textSub"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnVerMas"
        android:layout_width="121dp"
        android:layout_marginTop="5sp"
        android:layout_height="48dp"
        android:layout_weight="0.5"
        android:backgroundTint="@color/secondary_300"
        android:text="@string/btnVerMas"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="15sp" />


</LinearLayout>